{
    "apiVersion": "v1", 
    "kind": "ReplicationController", 
    "metadata": {
        "labels": {
            "name": "etcd-locks"
        }, 
        "name": "etcd-locks", 
        "namespace": "default"
    }, 
    "spec": {
        "replicas": 1, 
        "selector": {
            "name": "etcd-locks"
        }, 
        "template": {
            "metadata": {
                "labels": {
                    "name": "etcd-locks"
                }
            }, 
            "spec": {
                "containers": [
                    {
                        "image": "quay.io/coreos/etcd:v2.1.1", 
                        "args": [
                            "-listen-client-urls",
                            "http://0.0.0.0:2379",
                            "--advertise-client-urls",
                            "http://127.0.0.1:2379"
                        ], 
                        "name": "etcd", 
                        "resources": {
                            "limits": {
                                "cpu": "100m", 
                                "memory": "50Mi"
                            }
                        }
                    }
                ]
            }
        }
    }
}
